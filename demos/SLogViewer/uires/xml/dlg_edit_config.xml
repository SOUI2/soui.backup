<?xml version="1.0" encoding="utf-8"?>
<SOUI name="edit config" title="@string/title_no_name" bigIcon="ICON_LOGO:32" smallIcon="ICON_LOGO:16" width="600" height="400"  margin="20,5,5,5"  resizable="1" wndType="normal"
appWnd="1"
translucent="0"
trCtx="dlg_edit_config"
>
  <root skin="_skin.sys.wnd.bkgnd" cache="1" layout="vbox" padding="5,5,5,5">
    <caption size="-2,30">
      <icon pos="10,8" src="ICON_LOGO:16"/>
      <text pos="29,9" name="txt_title">@string/edit_config</text>
      <imgbtn name="btn_close" skin="_skin.sys.btn.close" id="1"   pos="-45,0" tip="@string/close" animate="1"/>
    </caption>
    <realwnd size="-2,0" weight="1" name="real_scilexer" wndclass="Scintilla" extend_top="5"/>
    <text multiLines="1" size="-2,-1">
      support columns: $(time), $(pid),$(tid),$(level),$(tag),$(content),$(line),$(module),$(package),$(function),$(file)
    </text>
    <text multiLines="1" size="-2,-1">
      option: [] used to specify minimal length of column. eg. $(time[20]) means the time column occupy at least 20 words.
    </text>
    <window size="-2,-1" layout="hbox" padding="5,5,5,5">
      <window size="0,0" weight="1" visible="0"/>
      <button size="-1,-1" padding="10,5,10,5" name="btn_save" text="@string/save"/>
      <button size="-1,-1" padding="10,5,10,5" extend_left="5" name="btn_close" id="1" text="@string/cancel"/>
    </window>
  </root>
</SOUI>